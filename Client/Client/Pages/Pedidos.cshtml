@page
<div class="container">
    <div class="row">
        <h2>Conexão</h2>
    </div>
    <div class="row">
        <div class="col-2">URL WEBSOCKET</div>
        <div class="col-4">
            <input type="text" id="txtUrl" value="" required/>
        </div>
    </div>
    <div class="row">
        <div class="col-2">SLM</div>
        <div class="col-4">
            <input type="text" id="txtSLM" value="6CF12A" />
        </div>
    </div>
    <div class="row">
        <div class="col-2">Praça</div>
        <div class="col-4">
            <select id="ddlPraca">
                <option value="01">P1</option>
                <option value="02">P2</option>
                <option value="03">P3</option>
            </select>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <button class="btn btn-sm btn-success" type="button" id="btnConectar">Conectar</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>

<!-- Pedido -->
<div class="container" id="divPedido" hidden>
    <div class="row">
        <div class="row">
            <h2>Pedido</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-2">Valor</div>
        <div class="col-4">
            <input type="text" id="txtValor" value="1" />
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <button class="btn btn-sm btn-success" type="button" id="btnPedido">Pedido</button>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <div id="qrcode"></div>
        </div>
    </div>



</div>

<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>

@section Scripts
{
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/lib/qrcodejs/qrcode.min.js"></script>
    <script src="~/js/pedidos.js"></script>
}